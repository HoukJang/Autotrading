# Environment Configuration
ENVIRONMENT=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_db
DB_USER=trader
DB_PASSWORD=your_secure_password_here

# Interactive Brokers Configuration
IB_HOST=127.0.0.1
# Port Configuration:
# TWS Live: 7496 | TWS Paper: 7497
# Gateway Live: 4001 | Gateway Paper: 4002
IB_PORT=7497  # Default: TWS Paper Trading
IB_CLIENT_ID=1

# Risk Management Settings
MAX_POSITION_SIZE=5
MAX_PORTFOLIO_RISK=0.02
MAX_DRAWDOWN=0.05
EMERGENCY_LIQUIDATE_ON_DISCONNECT=true

# Position Sizing
POSITION_SIZING_METHOD=fixed  # fixed, volatility, kelly
DEFAULT_POSITION_SIZE=1
POSITION_SIZE_MULTIPLIER=1.0

# Trading Parameters
DEFAULT_STOP_LOSS_PCT=0.02
DEFAULT_TAKE_PROFIT_PCT=0.04
TRAILING_STOP_ENABLED=false
TRAILING_STOP_PCT=0.015

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/trading_system.log
LOG_MAX_BYTES=104857600  # 100MB
LOG_BACKUP_COUNT=10

# Performance Settings
TICK_BUFFER_SIZE=10000
BAR_BUFFER_SIZE=1000
DB_POOL_SIZE=10
DB_POOL_MAX_OVERFLOW=20
EVENT_QUEUE_SIZE=10000
MAX_WORKERS=4

# Data Collection
SAVE_TICK_DATA=false
SAVE_BAR_DATA=true
DATA_RETENTION_DAYS=365

# Monitoring
HEALTH_CHECK_INTERVAL=30  # seconds
METRICS_INTERVAL=60  # seconds
PERFORMANCE_CALC_INTERVAL=300  # seconds